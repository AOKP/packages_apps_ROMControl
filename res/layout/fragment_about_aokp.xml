<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:aokp="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

    <LinearLayout
            style="@style/settingsFragmentStyle">

        <com.aokp.romcontrol.widgets.DeveloperPreference
                aokp:nameDev="AOKP"
                aokp:twitterHandle="AOKP_ROM"
                aokp:githubLink="@string/github_aokp"
                aokp:donateLink="@string/donate_aokp"
                aokp:emailDev="github@aokp.co"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <com.aokp.romcontrol.settings.UrlSetting
                android:id="@+id/aokp"
                android:title="@string/aokp_website_title"
                android:summary="@string/aokp_website_summary"
                aokp:url="@string/url_aokp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <com.aokp.romcontrol.settings.UrlSetting
                android:id="@+id/aokp_review"
                android:title="@string/aokp_review_title"
                android:summary="@string/aokp_review_summary"
                aokp:url="@string/url_aokp_gerrit"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        <com.aokp.romcontrol.settings.UrlSetting
                android:id="@+id/aokp_irc"
                android:title="@string/aokp_irc_title"
                android:summary="@string/aokp_irc_summary"
                aokp:url="@string/url_aokp_irc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

    </LinearLayout>
</ScrollView>
