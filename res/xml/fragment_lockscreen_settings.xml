<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/lockscreen_settings_title"
    xmlns:aokp="http://schemas.android.com/apk/res/com.aokp.romcontrol" >

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="lockscreen_media_metadata"
        android:title="@string/media_art_title"
        android:summary="@string/media_art_summary"
        android:defaultValue="true" />

    <com.aokp.romcontrol.settings.CMSecureSettingSwitchPreference
        android:key="lockscreen_visualizer"
        android:title="@string/lockscreen_visualizer_title"
        android:defaultValue="true"/>

    <com.aokp.romcontrol.settings.CMSecureSettingSwitchPreference
        android:key="lock_screen_weather_enabled"
        android:title="@string/lockscreen_weather_enabled_title"
        android:defaultValue="false"/>

    <com.aokp.romcontrol.settings.CMSecureSettingSwitchPreference
        android:key="lock_screen_blur_enabled"
        android:title="@string/lockscreen_blur_enabled_title"
        android:defaultValue="false"
        aokp:requiresConfig="@*android:bool/config_uiBlurEnabled" />

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="fingerprint_success_vib"
        android:title="@string/fprint_sucess_vib_title"
        android:summary="@string/fprint_sucess_vib_summary"
        android:defaultValue="true" />

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="double_tap_sleep_anywhere"
        android:title="@string/double_tap_sleep_anywhere_title"
        android:summary="@string/double_tap_sleep_anywhere_summary" />

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="lockscreen_quick_unlock_control"
        android:title="@string/unlock_quick_unlock_control_title"
        android:summary="@string/unlock_quick_unlock_control_summary" />

    <com.aokp.romcontrol.settings.SecureSettingSwitchPreference
        android:key="status_bar_locked_on_secure_keyguard"
        android:title="@string/block_on_secure_keyguard_title"
        android:summary="@string/block_on_secure_keyguard_summary"
        android:defaultValue="false"/>

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="hide_lockscreen_clock"
        android:title="@string/hide_lockscreen_clock_title"
        android:defaultValue="true" />

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="hide_lockscreen_date"
        android:title="@string/hide_lockscreen_date_title"
        android:defaultValue="true" />

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="keyguard_show_clock"
        android:title="@string/keyguard_statusbar_clock_title"
        android:summary="@string/keyguard_statusbar_clock_summary" />

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="lock_screen_custom_notif"
        android:title="@string/lockscreen_maxnotif_title"
        android:summary="@string/lockscreen_maxnotif_sumary"
        android:defaultValue="false" />

    <com.aokp.romcontrol.widgets.SeekBarPreferenceCham
        android:key="lockscreen_max_notif_cofig"
        android:title="@string/lockscreen_maxnotif_config"
        android:max="8"
        aokp:minimum="3"
        aokp:unitsLeft=""
        aokp:unitsRight=""
        android:persistent="false"
        android:dependency="lock_screen_custom_notif" />

    <PreferenceCategory
        android:key="lock_screen_weather_settings_title"
        android:title="@string/lock_screen_weather_settings_title">

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="lock_screen_show_weather"
        android:title="@string/weather_show_weather_title"
        android:summary="@string/weather_show_weather_summary" />

    <com.aokp.romcontrol.settings.SystemSettingSwitchPreference
        android:key="lock_screen_show_weather_location"
        android:title="@string/weather_show_location_title"
        android:summary="@string/weather_show_location_summary"
        android:defaultValue="true"
        android:dependency="lock_screen_show_weather" />

    <ListPreference
        android:key="weather_condition_icon"
        android:title="@string/weather_condition_icon_title"
        android:dialogTitle="@string/weather_condition_icon_dlg_title"
        android:entries="@array/weather_condition_icon_entries"
        android:entryValues="@array/weather_condition_icon_values"
        android:dependency="lock_screen_show_weather" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="weather_cat_notifications"
        android:title="@string/weather_cat_notifications_title">

        <ListPreference
            android:key="weather_hide_panel"
            android:title="@string/weather_hide_panel_title"
            android:dialogTitle="@string/weather_hide_panel_dlg_title"
            android:entries="@array/weather_hide_panel_entries"
            android:entryValues="@array/weather_hide_panel_values"
            android:dependency="lock_screen_show_weather" />

        <com.aokp.romcontrol.widgets.SeekBarPreferenceCham
            android:key="weather_number_of_notifications"
            android:title="@string/weather_number_of_notifications_title"
            android:max="6"
            aokp:minimum="1"
            android:persistent="false"
            android:dependency="lock_screen_show_weather" />

    </PreferenceCategory>

</PreferenceScreen>
